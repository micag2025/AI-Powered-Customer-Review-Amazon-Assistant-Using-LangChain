digraph ReviewAnalysisChain {
	A [label="User_Input
Retrieve Review Data)"]
	B [label="Prompt 1: Generate Summary"]
	C [label="LLMChain 1 (Summarization)"]
	D [label="Prompt 2: Sentiment Analysis"]
	E [label="LLMChain 2 (Sentiment Analysis)"]
	F [label="Final Output: Sentiment Result"]
	A -> B [label="Extract {review_title, review_body}"]
	B -> C [label="Pass to LLM"]
	C -> D [label="Generated: {summary}"]
	D -> E [label="Pass to LLM"]
	E -> F [label="Generated: Sentiment"]
}
