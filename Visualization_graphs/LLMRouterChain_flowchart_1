digraph MultiPromptChain {
	nodesep=1.0 rankdir=TB ranksep=1.2
	A [label="User Input (Review)" fillcolor=lightgrey shape=box style=filled]
	B [label="Classify Review Sentiment" fillcolor=lightblue shape=diamond style=filled]
	C [label="Router Chain: Select Appropriate Chain" fillcolor=lightyellow shape=diamond style=filled]
	D1 [label="Positive Response Chain" fillcolor=lightgreen shape=ellipse style=filled]
	D2 [label="Negative Response Chain" fillcolor=lightcoral shape=ellipse style=filled]
	D3 [label="Support Response Chain" fillcolor=lightblue shape=ellipse style=filled]
	E [label="Final Response Output" fillcolor=lightgrey shape=ellipse style=filled]
	A -> B [label="Input: {Review}"]
	B -> C [label="Determine Sentiment"]
	C -> D1 [label="Route to Positive Chain" constraint=false]
	C -> D2 [label="Route to Negative Chain" constraint=false]
	C -> D3 [label="Route to Support Chain" constraint=false]
	D1 -> E [label="Generate Friendly Response"]
	D2 -> E [label="Generate Apology & Assistance"]
	D3 -> E [label="Provide Support Steps"]
}
